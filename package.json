{
  "name": "backstage-demo-app",
  "version": "1.0.0",
  "description": "A demo application for Backstage CI/CD pipeline demonstration",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "build": "npm run test && echo 'Build successful - ready for deployment!'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t demo-app:latest .",
    "docker:run": "docker run -p 3000:3000 demo-app:latest"
  },
  "keywords": [
    "backstage",
    "demo",
    "cicd",
    "nodejs",
    "express"
  ],
  "author": "Backstage Demo Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.50.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}